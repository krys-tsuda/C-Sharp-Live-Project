@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form">

    <h4 class="banner-header">Blog Author</h4>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-white" })
    @Html.HiddenFor(model => model.BlogAuthorId)

    <!--Name-->
    <div class="form-row justify-content-center">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-field", required = "required" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-white" })
            </div>
        </div>
    </div>
    <!--Bio-->
    <div class="form-row justify-content-center">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control text-area" } })
                @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-white" })
            </div>
        </div>
    </div>
    
    <div class="form-row justify-content-center">
        <!--Joined-->
        <div class="form-col mx-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Joined, new { htmlAttributes = new { @class = "form-control datetime-field", type = "datetime-local", required = "required" } })
                @Html.ValidationMessageFor(model => model.Joined, "", new { @class = "text-white" })
            </div>
        </div>
        <!--Left-->
        <div class="form-col mx-3">
            <div class="form-group">
                @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Left, new { htmlAttributes = new { @class = "form-control datetime-field", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.Left, "", new { @class = "text-white" })
            </div>
        </div>
        <!--Button Cointainer-->
        <div class="button-container">
            <div class="form-row justify-content-start align-items-end">
                <div class="form-col mx-4">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "custom-button back" })
                </div>

                <div class="form-col mx-4">
                    <input type="submit" value="Save" class="custom-button submit" />
                </div>
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}
